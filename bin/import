#! /usr/bin/env ruby

$: << File.absolute_path('./bin/lib')

require 'date'
require 'slop'

require 'post_header'
require 'post_slug'
require 'exhibition'

opts = Slop.parse do |o|
  o.banner = 'Usage: bin/import name directory [options]'
  o.on '--help', 'this help message' do
    puts o
    exit
  end
end

name, source = opts.arguments

unless name && source
  puts opts
  abort
end

time = Time.now
slug = PostSlug.new name, time

header = PostHeader.new({
  title: name,
  date: time.strftime('%Y-%m-%d %X')
})

exhibition = Exhibition.new({
  header: header,
  source: Dir.glob("#{source}/*.svg")
})

exhibition.write "_posts/#{slug}.html"
